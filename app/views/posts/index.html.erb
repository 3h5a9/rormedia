<div class="container">
  <div class="row my-5 pt-5">
    <div class="col-md-10 offset-md-1">
      <% @posts.each do |post| %>
        <div class="card mb-5">
          <div class="row no-gutters">
            <div class="col-md-3">
              <%= post_thumbnail(post) %>
            </div>
            <div class="col-md-9">
              <div class="card-body">
                <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
                
                <p><%= truncate sanitize(post.content, tags: [],  class: 'card-text'), length: 100 %></p>
                
                <%= render  "posts/partials/post_meta", post: post %>
                
                <div class="private_links">
                  <%= private_links(post) %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>