<%= form_for([@post, comment]) do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: 'form-control', placeholder: 'Your Name' %>
  </div>

  <div class="form-group">
    <%= f.text_area :content, class: 'form-control', placeholder: 'Comment' %>
  </div>
  <%= f.submit(comment.new_record? ? "Publish" : "Save Changes", class: 'btn btn-sm btn-success rounded-0') %>
  <% unless comment.new_record? %>
    <%= link_to  "Cancle", post_path(@post), class: 'btn btn-sm btn-warning rounded-0' %>
  <% end %>
<% end %>